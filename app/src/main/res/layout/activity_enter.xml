<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".EnterActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_top"
        android:text="Select Words"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nounButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin_enter_activity"
        android:text="Nouns"
        android:background="@drawable/button_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/verbButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin_enter_activity"
        android:text="Verbs"
        android:background="@drawable/button_style"
        app:layout_constraintEnd_toEndOf="@+id/nounButton"
        app:layout_constraintTop_toBottomOf="@+id/nounButton" />

    <Button
        android:id="@+id/adjectiveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin_enter_activity"
        android:text="Adjectives"
        android:background="@drawable/button_style"
        app:layout_constraintStart_toStartOf="@+id/verbButton"
        app:layout_constraintTop_toBottomOf="@+id/verbButton" />

    <Button
        android:id="@+id/placeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin_enter_activity"
        android:text="Places"
        android:background="@drawable/button_style"
        app:layout_constraintStart_toStartOf="@+id/adjectiveButton"
        app:layout_constraintTop_toBottomOf="@+id/adjectiveButton" />

    <Button
        android:id="@+id/timeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin_enter_activity"
        android:text="Time"
        app:layout_constraintStart_toStartOf="@+id/placeButton"
        android:background="@drawable/button_style"
        app:layout_constraintTop_toBottomOf="@+id/placeButton" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_vertical_margin"
        android:background="@drawable/button_style"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/timeButton" />


</androidx.constraintlayout.widget.ConstraintLayout>